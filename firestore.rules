rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // =================================
    // FUNGSI BANTUAN (HELPER FUNCTIONS)
    // =================================
    function isSignedIn() {
      return request.auth != null;
    }

    function isUserRole(role) {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }
    
    function getUserDesa() {
    	return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.desa;
    }
    
    // Digunakan untuk operasi UPDATE dan DELETE (memeriksa dokumen yang sudah ada)
    function isOwnerOfExistingDoc() {
    	return getUserDesa() == resource.data.desa;
    }

    // Digunakan untuk operasi CREATE (memeriksa data baru yang akan ditulis)
    function isCreatingForOwnDesa() {
      return getUserDesa() == request.resource.data.desa;
    }
    
    function validatePerangkatData(data) {
      return data.nama is string && data.nama.size() > 0 &&
             data.desa is string && data.desa.size() > 0 &&
             data.jabatan is string && data.jabatan.size() > 0 &&
             (!('nik' in data) || data.nik is string && data.nik.size() <= 16);
    }
    
    function validateJabatanKosongUpdate(requestData, existingData) {
      return requestData.nama == null &&
             requestData.nik == null &&
             requestData.foto_url == null &&
             requestData.ktp_url == null &&
             requestData.desa is string && requestData.desa == existingData.desa &&
             requestData.jabatan is string && requestData.jabatan == existingData.jabatan;
    }

    // =================================
    // ATURAN PER KOLEKSI (COLLECTION RULES)
    // =================================

    match /users/{userId} {
      allow read, update: if request.auth.uid == userId || isUserRole('admin_kecamatan');
      allow create: if isUserRole('admin_kecamatan');
    }
    
    match /perangkat/{docId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && 
                      (isUserRole('admin_kecamatan') || (isUserRole('admin_desa') && isCreatingForOwnDesa())) &&
                      validatePerangkatData(request.resource.data);
      allow update: if isSignedIn() && 
                      (isUserRole('admin_kecamatan') || (isUserRole('admin_desa') && isOwnerOfExistingDoc())) &&
                      (validatePerangkatData(request.resource.data) || validateJabatanKosongUpdate(request.resource.data, resource.data));
      allow delete: if isSignedIn() && (isUserRole('admin_kecamatan') || (isUserRole('admin_desa') && isOwnerOfExistingDoc()));
    }
    
    match /bpd/{docId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && (isUserRole('admin_kecamatan') || (isUserRole('admin_desa') && isCreatingForOwnDesa()));
      allow update, delete: if isSignedIn() && (isUserRole('admin_kecamatan') || (isUserRole('admin_desa') && isOwnerOfExistingDoc()));
    }
    
    match /lpm/{docId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && (isUserRole('admin_kecamatan') || (isUserRole('admin_desa') && isCreatingForOwnDesa()));
      allow update, delete: if isSignedIn() && (isUserRole('admin_kecamatan') || (isUserRole('admin_desa') && isOwnerOfExistingDoc()));
    }

    // [PENAMBAHAN] Aturan baru untuk koleksi program kerja LPM
    match /lpm_program/{docId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && (isUserRole('admin_kecamatan') || (isUserRole('admin_desa') && isCreatingForOwnDesa()));
      allow update, delete: if isSignedIn() && (isUserRole('admin_kecamatan') || (isUserRole('admin_desa') && isOwnerOfExistingDoc()));
    }

    match /pkk/{docId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && (isUserRole('admin_kecamatan') || (isUserRole('admin_desa') && isCreatingForOwnDesa()));
      allow update, delete: if isSignedIn() && (isUserRole('admin_kecamatan') || (isUserRole('admin_desa') && isOwnerOfExistingDoc()));
    }
    
    match /pkk_program/{docId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && (isUserRole('admin_kecamatan') || (isUserRole('admin_desa') && isCreatingForOwnDesa()));
      allow update, delete: if isSignedIn() && (isUserRole('admin_kecamatan') || (isUserRole('admin_desa') && isOwnerOfExistingDoc()));
    }

    match /karang_taruna/{docId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && (isUserRole('admin_kecamatan') || (isUserRole('admin_desa') && isCreatingForOwnDesa()));
      allow update, delete: if isSignedIn() && (isUserRole('admin_kecamatan') || (isUserRole('admin_desa') && isOwnerOfExistingDoc()));
    }
    
    match /karang_taruna_kegiatan/{docId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && (isUserRole('admin_kecamatan') || (isUserRole('admin_desa') && isCreatingForOwnDesa()));
      allow update, delete: if isSignedIn() && (isUserRole('admin_kecamatan') || (isUserRole('admin_desa') && isOwnerOfExistingDoc()));
    }

    match /rt_rw/{docId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && (isUserRole('admin_kecamatan') || (isUserRole('admin_desa') && isCreatingForOwnDesa()));
      allow update, delete: if isSignedIn() && (isUserRole('admin_kecamatan') || (isUserRole('admin_desa') && isOwnerOfExistingDoc()));
    }
    
    match /aset/{docId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && (isUserRole('admin_kecamatan') || (isUserRole('admin_desa') && isCreatingForOwnDesa()));
      allow update, delete: if isSignedIn() && (isUserRole('admin_kecamatan') || (isUserRole('admin_desa') && isOwnerOfExistingDoc()));
    }
    
    match /efile/{docId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && (isUserRole('admin_kecamatan') || (isUserRole('admin_desa') && isCreatingForOwnDesa()));
      allow update, delete: if isSignedIn() && (isUserRole('admin_kecamatan') || (isUserRole('admin_desa') && isOwnerOfExistingDoc()));
    }
    
    match /kegiatan/{docId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && (isUserRole('admin_kecamatan') || (isUserRole('admin_desa') && isCreatingForOwnDesa()));
      allow update, delete: if isSignedIn() && (isUserRole('admin_kecamatan') || (isUserRole('admin_desa') && isOwnerOfExistingDoc()));
    }

    // Collection-group rules for any `realisasi` subcollection used by collectionGroup queries
    match /{path=**}/realisasi/{realisasiId} {
      allow read: if isSignedIn() && (
        isUserRole('admin_kecamatan') ||
        (isUserRole('admin_desa') && resource.data.parentDesa == getUserDesa())
      );
      allow create: if isSignedIn() && (
        isUserRole('admin_kecamatan') ||
        (isUserRole('admin_desa') && request.resource.data.parentDesa == getUserDesa())
      );
      allow update, delete: if isSignedIn() && (
        isUserRole('admin_kecamatan') ||
        (isUserRole('admin_desa') && resource.data.parentDesa == getUserDesa())
      );
    }
    
    match /notifications/{notificationId} {
      allow read, update: if isSignedIn() && request.auth.uid == resource.data.userId;
      allow create: if isSignedIn();
    }
    
    match /settings/{docId} {
      allow read: if isSignedIn();
      allow write: if isUserRole('admin_kecamatan');
    }
    
    // --- ATURAN BARU UNTUK MODUL KEUANGAN ---
    match /anggaran_tahunan/{anggaranId} {
      // Allow read for authenticated users
      allow read: if isSignedIn();

      // Create: only admin_desa may create anggaran for their own desa
      allow create: if isSignedIn() && isUserRole('admin_desa') && isCreatingForOwnDesa();

      // Update: admin_desa may update their own anggaran when status is Draft or Ditolak;
      // admin_kecamatan may update any anggaran (e.g., to Disahkan or Revisi)
      allow update: if isSignedIn() && (
        (isUserRole('admin_desa') && isOwnerOfExistingDoc() && (resource.data.status == 'Draft' || resource.data.status == 'Ditolak')) ||
        isUserRole('admin_kecamatan')
      );

      // Delete: admin_desa may delete their own anggaran when status is Draft or Ditolak;
      // admin_kecamatan may delete any anggaran
      allow delete: if isSignedIn() && (
        (isUserRole('admin_desa') && isOwnerOfExistingDoc() && (resource.data.status == 'Draft' || resource.data.status == 'Ditolak')) ||
        isUserRole('admin_kecamatan')
      );

      // Subcollection realisasi rules remain more restrictive: operation allowed when appropriate
      match /realisasi/{realisasiId} {
        allow read: if isSignedIn();
        allow create, update, delete: if isSignedIn() && isUserRole('admin_desa') && isCreatingForOwnDesa() && get(/databases/$(database)/documents/anggaran_tahunan/$(anggaranId)).data.status == 'Disahkan';
      }
    }
  }
}

